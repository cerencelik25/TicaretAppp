@model KategoriModel
@{
    ViewData["Title"] = "KategoriEkle";
}

<h1>Kategori Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateKategori" method="post">
            <div class="form-group row">
                <label asp-for="KategoriAdi" class="col-md-2 col-form-label" placeholder="Kitap adini giriniz..."></label>
                <div class="col-md-10">
                    <input asp-for="KategoriAdi" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2 text-center">
                    <button type="submit" class="btn btn-primary">Kategoriyi Kaydet</button>
                </div>
            </div>

        </form>
    </div>
</div>